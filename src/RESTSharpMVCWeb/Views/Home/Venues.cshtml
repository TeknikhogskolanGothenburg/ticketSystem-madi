@model List<MVCWebCodeByMadi.Models.Venues>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Venues</h2>

<p>
    <a asp-action="VenueAdd" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Venue Name
            </th>
            <th>
                Address
            </th>

            <th>
                City
            </th>
            <th>
                Country
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.City)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)

                </td>
              


                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.VenueId">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.VenueId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
